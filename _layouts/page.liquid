---
classes:
  - quire-page
layout: base.11ty.js
description: Single page default template
---
<div style="--bgc: {{ theme_color_primary | strip | escape }};">
{% pageHeader
  byline_format=byline_format,
  image=image,
  label=label,
  pageContributors=pageContributors,
  subtitle=subtitle,
  title=title
%}
</div>
{% if content %}
<section class="section quire-page__content" >
  <div class="container">
    <div class="content" style="--bgc: {{ theme_color_primary | strip | escape }}; --crosslink: {{ crosslink_color | strip | escape }}; --shadow {{ theme_color_primary | strip | escape }}; --img: url({{ invitation_url | strip | escape }});">
      {{ content }}
      {% bibliography citations %}
    </div>
  </div>
</section>
{% endif %}
<section class="section quire-page__content" style="--bgc: {{ theme_color_secondary | strip | escape }};">
  <div class="container">
    {% pageButtons pagination=pagination %}
  </div>
</section>
